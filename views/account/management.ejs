<% if (title && locals.accountData) { %>
    <h1 class="car__review--title"> <%= title %></h1>
<% } else {
    res.redirect('/')
}%>
<%- messages() %>

<% if (errors) { %>
    <ul class="notice--error">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <% }) %>
    </ul>
<% } %>

<div class="car__upgrade">
    <h2 class="car__upgrade--title">Welcome <%- locals.accountData.account_firstname %></h2>
    <hr>
    <br>
    <div class="car__upgrade--list">
    <a href="/acc/update/<%- locals.accountData.account_id%>">Update Account Information</a>
    <% if (locals.accountData.account_type !== 'client') { %>
        <div><h3 class="">Manage Inventory</h3>
            <a href="/inv/">Current Inventory</a></div>
    <% }%>
    </div>


</div>

