<div class="account__login"><% if (title) { %>
        <h1 class="account__login--header"> <%= title %></h1>
    <% } else {
        res.redirect('/')
    }%>
    <%- messages() %>



    <form action="/inv/edit-inv" id="editForm" method="post" class="account__login--container">
        <input type="hidden" name="inv_id"
        <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
                <% } %>>
        <% if (errors && errors.classification_id) { %>
            <ul class="notice--error">
                <% errors.classification_id.forEach(error => { %>
                    <li><%= error %></li>
                <% }) %>
            </ul>
        <% } %>
        <%- classification_options %>
        <label for="inv_make">Make: </label><br>
        <% if (errors && errors.inv_make) { %>
            <ul class="notice--error">
                <% errors.inv_make.forEach(error => { %>
                    <li><%= error %></li>
                <% }) %>
            </ul>
        <% } %>
        <input
                type="text"
                id="inv_make"
                name="inv_make"
                required
                title="Minimum of 3 Characters"
                minlength="3"
                value="<%= locals.inv_make %>"
        >
        <br>
        <label for="inv_model">Model: </label><br>
        <% if (errors && errors.inv_model) { %>
            <ul class="notice--error">
                <% errors.inv_model.forEach(error => { %>
                    <li><%= error %></li>
                <% }) %>
            </ul>
        <% } %>
        <input type="text"
               id="inv_model"
               name="inv_model"
               required
               title="Minimum of 3 Characters"
               minlength="3"
               value="<%= locals.inv_model %>"><br>
        <label for="inv_description">Description: </label><br>
        <% if (errors && errors.inv_description) { %>
            <ul class="notice--error">
                <% errors.inv_description.forEach(error => { %>
                    <li><%= error %></li>
                <% }) %>
            </ul>
        <% } %>
        <textarea
                id="inv_description"
                name="inv_description"
                required
                rows="4"
                cols="50"><%= locals.inv_description%>
        </textarea>
        <br>
        <label for="inv_image">Image Path: </label><br>
        <% if (errors && errors.inv_image) { %>
            <ul class="notice--error">
                <% errors.inv_image.forEach(error => { %>
                    <li><%= error %></li>
                <% }) %>
            </ul>
        <% } %>
        <input type="text"
               id="inv_image"
               name="inv_image"
               placeholder="/images/vehicles/example.jpg"
               pattern="^\/images\/vehicles\/.*\.(jpg|png)$"
               title="Must be formatted like so: /images/vehicles/example.jpg"
               required
               value="<%= locals.inv_image %>"><br>
        <label for="inv_thumbnail">Thumbnail Path: </label><br>
        <% if (errors && errors.inv_thumbnail) { %>
            <ul class="notice--error">
                <% errors.inv_thumbnail.forEach(error => { %>
                    <li><%= error %></li>
                <% }) %>
            </ul>
        <% } %>
        <input type="text"
               id="inv_thumbnail"
               name="inv_thumbnail"
               placeholder="/images/vehicles/example.jpg"
               pattern="^\/images\/vehicles\/.*\.(jpg|png)$"
               title="Must be formatted like so: /images/vehicles/example.jpg"
               value="<%= locals.inv_thumbnail %>"
               required
        ><br>
        <label for="inv_price">Price: </label><br>
        <% if (errors && errors.inv_price) { %>
            <ul class="notice--error">
                <% errors.inv_price.forEach(error => { %>
                    <li><%= error %></li>
                <% }) %>
            </ul>
        <% } %>
        <input type="text"
               id="inv_price"
               name="inv_price"
               pattern="^-?\d+(\.\d+)?$"
               title="Decimals or Integers"
               required
               value="<%= locals.inv_price %>"><br>
        <label for="inv_year">Year: </label><br>
        <% if (errors && errors.inv_year) { %>
            <ul class="notice--error">
                <% errors.inv_year.forEach(error => { %>
                    <li><%= error %></li>
                <% }) %>
            </ul>
        <% } %>
        <input type="text"
               id="inv_year"
               name="inv_year"
               pattern="^(19|20)\d{2}$"
               title="4-Digit Year"
               required
               value="<%= locals.inv_year %>"><br>
        <label for="inv_miles">Miles: </label><br>
        <% if (errors && errors.inv_miles) { %>
            <ul class="notice--error">
                <% errors.inv_miles.forEach(error => { %>
                    <li><%= error %></li>
                <% }) %>
            </ul>
        <% } %>
        <input type="text"
               id="inv_miles"
               name="inv_miles"
               pattern="^\d+$"
               title="Digits Only"
               value="<%= locals.inv_miles%>"
               required
        ><br>
        <label for="inv_color">Color: </label><br>
        <% if (errors && errors.inv_color) { %>
            <ul class="notice--error">
                <% errors.inv_color.forEach(error => { %>
                    <li><%= error %></li>
                <% }) %>
            </ul>
        <% } %>
        <input type="text"
               id="inv_color"
               name="inv_color"
               pattern="^[A-Za-z]+$"
               title="Alphabetical Letters Only"
               required
               value="<%= locals.inv_color %>"><br>

        <button type="submit" disabled>Update Vehicle</button>
    </form>
</div>
<script src="../../js/inv-edit.js"></script>